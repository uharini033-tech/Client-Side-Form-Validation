<script>
  // Tab switching logic
  const tabs = document.querySelectorAll('.tab');
  const loginForm = document.getElementById('login');
  const regForm = document.getElementById('register');

  tabs.forEach(t => {
    t.addEventListener('click', () => {
      tabs.forEach(x => x.classList.remove('active'));
      t.classList.add('active');

      if (t.dataset.target === 'login') {
        loginForm.style.display = '';
        regForm.style.display = 'none';
        t.setAttribute('aria-selected','true');
      } else {
        loginForm.style.display = 'none';
        regForm.style.display = '';
        t.setAttribute('aria-selected','true');
      }
    });
  });

  // Simple client-side validation + demo behavior
  function showMessage(el, msg, type='error') {
    el.innerHTML = '<div class="'+(type==='error'?'error':'success')+'">' + msg + '</div>';
    setTimeout(()=>{ el.innerHTML = ''; }, 5000);
  }

  // Login submission
  document.getElementById('login').addEventListener('submit', function(e){
    e.preventDefault();
    const email = document.getElementById('li-email').value.trim();
    const pass = document.getElementById('li-pass').value;

    // basic checks
    if (!email) { showMessage(document.getElementById('login-msg'),'Enter your email'); return; }
    if (pass.length < 6) { showMessage(document.getElementById('login-msg'),'Password must be at least 6 characters'); return; }

    // Demo: "successful" login if email contains "@"
    if (email.includes('@')) {
      showMessage(document.getElementById('login-msg'),'Signed in successfully — redirecting...', 'success');
      // In real app: send to server here. We simulate success.
    } else {
      showMessage(document.getElementById('login-msg'),'Please use a valid email address');
    }
  });

  // Register submission
  document.getElementById('register').addEventListener('submit', function(e){
    e.preventDefault();
    const fn = document.getElementById('r-first').value.trim();
    const ln = document.getElementById('r-last').value.trim();
    const email = document.getElementById('r-email').value.trim();
    const p1 = document.getElementById('r-pass').value;
    const p2 = document.getElementById('r-pass2').value;

    if (!fn || !ln) { showMessage(document.getElementById('reg-msg'),'Please enter full name'); return; }
    if (!email.includes('@')) { showMessage(document.getElementById('reg-msg'),'Please enter a valid email'); return; }
    if (p1.length < 6) { showMessage(document.getElementById('reg-msg'),'Password must be at least 6 characters'); return; }
    if (p1 !== p2) { showMessage(document.getElementById('reg-msg'),'Passwords do not match'); return; }

    showMessage(document.getElementById('reg-msg'),'Account created — welcome!','success');
    // Reset fields (demo)
    this.reset();
    // Optionally switch to login tab
    tabs[0].click();
  });

  // Social demo
  function demoSocial(provider){
    alert('This demo does not connect to '+provider+'. Replace with real OAuth flow.');
  }

  // Accessibility: allow Enter to submit while focusing on inputs (browser default).
  // Small enhancement: pressing Esc will clear messages.
  document.addEventListener('keydown', function(e){
    if (e.key === 'Escape') {
      document.getElementById('login-msg').innerHTML = '';
      document.getElementById('reg-msg').innerHTML = '';
    }
  });
</script>
