    .form-box {
      background: rgba(255, 255, 255, 0.8);
      padding: 25px;
      border-radius: 15px;
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
      width: 300px;
      text-align: center;
      backdrop-filter: blur(10px);
    }

    h2 {
      color: #ff6ec4;
      margin-bottom: 15px;
    }

    input {
      width: 90%;
      padding: 8px;
      margin: 8px 0;
      border: 1.5px solid #ddd;
      border-radius: 8px;
      font-size: 14px;
      outline: none;
      transition: 0.3s;
    }

    input:focus {
      border-color: #ff6ec4;
      box-shadow: 0 0 5px #ff6ec4;
    }

    small {
      color: #ff4b5c;
      font-size: 12px;
